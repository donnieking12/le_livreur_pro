# ========================================
# Le Livreur Pro - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# Never commit the actual .env file to version control

# ========================================
# SUPABASE CONFIGURATION
# ========================================
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ========================================
# ENVIRONMENT
# ========================================
ENVIRONMENT=development
FLUTTER_VERSION=3.32.8
DART_VERSION=3.8.1

# ========================================
# ANDROID BUILD CONFIGURATION
# ========================================
PACKAGE_NAME=io.lelivreurpro.app
BUILD_APP_NAME=Le Livreur Pro
ANDROID_VERSION_CODE=1
ANDROID_VERSION_NAME=1.0.0

# ========================================
# iOS BUILD CONFIGURATION
# ========================================
BUNDLE_ID=io.lelivreurpro.app
XCODE_PROJECT=ios/Runner.xcworkspace
XCODE_SCHEME=Runner

# ========================================
# FIREBASE CONFIGURATION
# ========================================
FIREBASE_PROJECT=le-livreur-pro
FIREBASE_APP_ID_ANDROID=your_android_app_id
FIREBASE_APP_ID_IOS=your_ios_app_id
FIREBASE_APP_ID_WEB=your_web_app_id

# ========================================
# GOOGLE PLAY CONSOLE
# ========================================
GOOGLE_PLAY_SERVICE_ACCOUNT_JSON=path_to_service_account_json
GOOGLE_PLAY_TRACK=internal

# ========================================
# APP STORE CONNECT
# ========================================
APP_STORE_CONNECT_PRIVATE_KEY=your_private_key_content
APP_STORE_CONNECT_KEY_ID=your_key_id
APP_STORE_CONNECT_ISSUER_ID=your_issuer_id

# ========================================
# NOTIFICATION SERVICES
# ========================================
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_fcm_sender_id

# ========================================
# PAYMENT GATEWAYS
# ========================================
ORANGE_MONEY_API_KEY=your_orange_money_api_key
MTN_MOMO_API_KEY=your_mtn_momo_api_key
MOOV_MONEY_API_KEY=your_moov_money_api_key
WAVE_API_KEY=your_wave_api_key

# ========================================
# ANALYTICS & MONITORING
# ========================================
SENTRY_DSN=your_sentry_dsn
MIXPANEL_TOKEN=your_mixpanel_token
ANALYTICS_ENABLED=true

# ========================================
# TESTING & QUALITY
# ========================================
TEST_RESULTS_EMAIL=test@lelivreurpro.com
CODE_QUALITY_EMAIL=quality@lelivreurpro.com
COVERAGE_THRESHOLD=80

# ========================================
# SECURITY
# ========================================
ENCRYPTION_KEY=your_32_character_encryption_key
JWT_SECRET=your_jwt_secret_key

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_LOCATION_TRACKING=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true

# ========================================
# API ENDPOINTS
# ========================================
API_BASE_URL=https://api.lelivreurpro.com
PAYMENT_API_URL=https://payments.lelivreurpro.com
TRACKING_API_URL=https://tracking.lelivreurpro.com

# ========================================
# CACHE & PERFORMANCE
# ========================================
CACHE_DURATION=3600
MAX_CACHE_SIZE=100
ENABLE_OFFLINE_MODE=true

# ========================================
# LOCALIZATION
# ========================================
DEFAULT_LOCALE=fr
SUPPORTED_LOCALES=fr,en
FALLBACK_LOCALE=fr
