# Development Environment Configuration
# This file contains environment variables for local development

# Application
APP_NAME=le-livreur-pro-dev
APP_VERSION=1.0.0-dev
NODE_ENV=development
DEBUG=true

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Firebase Configuration (for notifications)
FIREBASE_PROJECT_ID=le-livreur-pro-dev
FIREBASE_API_KEY=your-firebase-api-key-here
FIREBASE_AUTH_DOMAIN=le-livreur-pro-dev.firebaseapp.com
FIREBASE_STORAGE_BUCKET=le-livreur-pro-dev.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id-here
FIREBASE_APP_ID=your-app-id-here

# Payment Gateways (Test/Sandbox)
ORANGE_MONEY_API_KEY=test-orange-money-key
MTN_MONEY_API_KEY=test-mtn-money-key
MOOV_MONEY_API_KEY=test-moov-money-key
WAVE_API_KEY=test-wave-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=le_livreur_pro_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=debug

# External Services
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Email Service
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@lelivreurpro.local

# SMS Service (for OTP)
SMS_PROVIDER=mock
SMS_API_KEY=test-sms-key
SMS_SENDER_ID=LelivreurPro

# Security
JWT_SECRET=your-development-jwt-secret-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_CHAT=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=false
ENABLE_A_B_TESTING=false

# Development Tools
HOT_RELOAD=true
DEV_TOOLS=true
MOCK_APIS=true